{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
	"typeRoots": [
      "node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "include" : [
    "./app/src/**/*.ts",
    "./typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app/src/vendor/node_modules",
	"**/*.aot.ts"
  ]
}